# Cura AI Backend - Production (Render.com)
# Copy this to .env for production deployment

# =============================================================================
# RENDER.COM DEPLOYMENT CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# CORS Origins (add your Vercel frontend URL)
ALLOWED_ORIGINS=https://your-app.vercel.app,https://cura-ai.vercel.app

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_DEFAULT_MODEL=google/gemini-2.0-flash-exp:free
OPENROUTER_EMBEDDING_MODEL=openai/text-embedding-3-small

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=cura-medical-knowledge
PINECONE_HOST=your-index.svc.pinecone.io

# RAG Configuration
RAG_TOP_K=5
RAG_THRESHOLD_HIGH=0.80
RAG_THRESHOLD_PARTIAL=0.70
RAG_THRESHOLD_FALLBACK=0.60

# Site Configuration
SITE_NAME=Cura AI Medical Assistant
SITE_URL=https://your-app.vercel.app
