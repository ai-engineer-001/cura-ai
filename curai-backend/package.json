{
  "name": "curai-backend",
  "version": "0.1.0",
  "description": "Production backend for Cura AI realtime medical assistant with RAG, ASR, and streaming",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src --exec node src/server.js",
    "dev:local": "cp .env.local .env && npm run dev",
    "build": "echo 'No build step required for Node.js'",
    "embed": "node src/scripts/embed-corpus.js",
    "embed:datasets": "node embed-datasets.js",
    "smoke": "bash tests/smoke.sh",
    "test:ws": "node tests/ws-test-client.js",
    "test": "npm run smoke"
  },
  "keywords": [
    "medical",
    "ai",
    "realtime",
    "rag",
    "asr",
    "fastify",
    "openrouter",
    "pinecone"
  ],
  "author": "Cura AI Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/websocket": "^10.0.1",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "form-data": "^4.0.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
