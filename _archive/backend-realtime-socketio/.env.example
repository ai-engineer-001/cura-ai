# Cura AI Real-Time Backend Configuration

# Server
PORT=8080
NODE_ENV=development

# Authentication
JWT_SECRET=change_this_super_secret_key_in_production

# OpenRouter (Primary LLM)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# OpenAI (Whisper ASR + TTS)
OPENAI_API_KEY=your_openai_key_here
WHISPER_MODEL=whisper-1

# Redis (Session Storage)
REDIS_URL=redis://localhost:6379

# Audio Processing
AUDIO_CHUNK_SIZE_MS=250
AUDIO_FORMAT=webm-opus
MAX_AUDIO_BUFFER_SIZE=5000000

# Video Processing
VIDEO_ENABLED=true
VIDEO_FRAME_INTERVAL_MS=1500
VIDEO_WIDTH=320
VIDEO_HEIGHT=240

# Emergency Detection
EMERGENCY_KEYWORDS=help,can't breathe,not breathing,unconscious,chest pain,bleeding,choking,seizure,collapsed
URGENCY_THRESHOLD=5

# Rate Limiting
MAX_CONNECTIONS_PER_IP=5
MAX_MESSAGES_PER_MINUTE=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
